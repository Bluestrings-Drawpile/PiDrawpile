				crontab_change=yes
				sudo crontab -u root -l | grep -v '#Drawpile Hostname' | sudo crontab -u root -
				echo
			else
				:
				# echo No crontab, sadge. Adding in crontab jerb.
			fi
			echo
			echo "${bold}${cyan}*****Setting up FreeDNS.afraid.org cronjob for auto update of IP . . . *****${normal}"
			echo 
